{
  "css.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.formatOnSave": true,
  "tailwindCSS.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "tailwindCSS.experimental.classRegex": [
    [
      "cn\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "kiroAgent.configureMCP": "Disabled"
}